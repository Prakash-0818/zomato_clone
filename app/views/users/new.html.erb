<h1>sign up</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p class="text-danger"><%= e %></p>
  <% end %> 
<% end %>

<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :Username %><br>
    <%= f.text_field :Username %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation%><br>
    <%= f.text_field :password_confirmation %>
  </p>
  <%= f.submit %>
<% end %>
