<h1>Login </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p class="text-danger"><%= e %></p>
  <% end %> 
<% end %>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br>
    <%= email_field_tag :email %>
  </p>
  
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>
  
  <%= submit_tag "login" %>
<% end %>
