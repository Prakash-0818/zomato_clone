
 <% if flash[:errors] %> 
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %> 
<% end %>

<%= form_for(@restaurant) do |f| %>
  <p>
    <%= f.label :restaurant_name %>
    <%= f.text_field :restaurant_name %>
  </p>
  <p>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :phone_no %>
    <%= f.text_field :phone_no %>
  </p>
  <%= f.submit %>
<% end %> 

