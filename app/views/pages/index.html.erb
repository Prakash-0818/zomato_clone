<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Restaurant Name</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant.each_with_index do |restaurant,i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= restaurant.restaurant_name %></td>
      <td><%= restaurant.email %></td>
      <td>
          <%= link_to "Upload Images", upload_image_path(restaurant.id), class: "btn btn-sm btn-block btn-primary"%>
      </div>
      </td>
    </tr>
    <% end %>
  </tbody> 
</table>
<div class="row justify-content-right">
  <div class="col-2">
    <%= link_to "Back", admin_dashboards_path, class: "btn btn-lg btn-block btn-secondary"%>  
  </div>
</div>